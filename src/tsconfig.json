{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "emitBOM": true,
    "charset": "utf8",
    "outDir": "../dist",
    "lib": [
      "es5",
      "es6"
    ],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "rootDir": "."
  },
  "exclude": [
    "../node_modules"
  ]
}
